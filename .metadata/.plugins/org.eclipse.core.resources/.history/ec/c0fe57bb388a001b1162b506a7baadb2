		txtNumeAngajat.setColumns(10);
		
		JLabel lblVarstaAngajat = new JLabel("Varsta angajat:");
		lblVarstaAngajat.setFont(new Font("Tahoma", Font.PLAIN, 18));
		lblVarstaAngajat.setBounds(42, 146, 141, 46);

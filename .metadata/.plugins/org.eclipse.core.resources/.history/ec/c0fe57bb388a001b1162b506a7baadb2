		txtVarstaAngajat = new JTextField();
		txtVarstaAngajat.setFont(new Font("Tahoma", Font.PLAIN, 18));
		txtVarstaAngajat.setColumns(10);
		txtVarstaAngajat.setBounds(208, 155, 162, 28);
		panel.add(txtVarstaAngajat);
		
		btnAddAngajat = new JButton("Adauga angajat");
		btnAddAngajat.setFont(new Font("Tahoma", Font.PLAIN, 18));
		btnAddAngajat.setBounds(42, 202, 195, 28);
		panel.add(btnAddAngajat);
		
		boxAngajat = new JComboBox<String>();
